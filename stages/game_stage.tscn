extends TextureButton

func _ready():
	connect(\"pressed\", self, \"_on_pressed\")
	grab_focus()		# 让空格和回车也能开始游戏
	pass

func _on_pressed():
	var bird = utils.get_main_node().get_node(\"bird\")
